@model UI.ViewModels.Cards.RenewVM
@{
    this.Layout = "/Views/Shared/_Layout.cshtml";
    ViewData["title"] = "Renew Card";
}

<fieldset>
    <legend>Renew</legend>
    <form action="/Cards/Renew" method="post">
        <div class="grid">
            @Html.HiddenFor(m => m.Id)
            @Html.HiddenFor(m => m.UserId)
            <div class="row">
                <div class="col-1">@Html.LabelFor(m => m.ValidThru)</div>
                <div class="col-2">
                    @Html.EditorFor(m => m.ValidThru,
                             new
                             {
                                 htmlAttributes
                             = new { @class = "form-control", type = "date"}
                             }
                             )
                </div>
                <div class="col-2">
                    @Html.ValidationMessageFor(m => m.ValidThru)
                </div>
                <div class="row">
                    <div class="col-1"></div>
                    <div class="col-2">
                        @Html.ValidationMessage("dateError", new { @style = "error right" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-1"></div>
                <div class="col-2">
                    <input type="submit" class="right" value="Renew" />
                    <a class="right" href="/Cards/Details?id=@Model.Id">Back</a>
                </div>
            </div>
        </div>
    </form>
</fieldset>


