@model UI.ViewModels.Transactions.DetailsVM

@{
    ViewData["Title"] = "Details";
}

<h1>Transaction details:</h1>
<hr/>
<div>
    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m=>m.CardId)
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(m => m.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(m => m.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(m => m.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayTextFor(m => m.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(m => m.IBAN)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(m => m.IBAN)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(m => m.DateOfTransaction)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(m => m.DateOfTransaction)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(m => m.Sum)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(m => m.Sum)
        </dd>
    </dl>
    <dl class="row">
        <dd>
            <a href="/Transactions/Edit?id=@Model.Id">Edit</a>
        </dd>
        <dd>
            <a href="/Transactions/Index?id=@Model.CardId">Back</a>
        </dd>
    </dl>
</div>
