@using UI.Enums
@model UI.ViewModels.Users.CreateVM

@{
    this.Layout = "/Views/Shared/_Layout.cshtml";
    ViewData["title"] = "Register";
}

<fieldset>
    <legend>Register</legend>
    <form action="/Users/Create" method="post">
        <div class="grid">
            <div class="row">
                <div class="col-1">@Html.LabelFor(m => m.Username)</div>
                <div class="col-2">
                    @Html.TextBoxFor(m => m.Username)
                </div>
                <div class="col-2">
                    @Html.ValidationMessageFor(m => m.Username)
                </div>
            </div>
            <div class="row">
                <div class="col-1">@Html.LabelFor(m => m.Password)</div>
                <div class="col-2">
                    @Html.PasswordFor(m => m.Password)
                </div>
                <div class="col-2">
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
            </div>
            <div class="row">
                <div class="col-1">@Html.LabelFor(m => m.FirstName)</div>
                <div class="col-2">
                    @Html.TextBoxFor(m => m.FirstName)
                </div>
                <div class="col-2">
                    @Html.ValidationMessageFor(m => m.FirstName)
                </div>
            </div>
            <div class="row">
                <div class="col-1">@Html.LabelFor(m => m.LastName)</div>
                <div class="col-2">
                    @Html.TextBoxFor(m => m.LastName)
                </div>
                <div class="col-2">
                    @Html.ValidationMessageFor(m => m.LastName)
                </div>
            </div>
            <div class="row">
                <div class="col-1">@Html.LabelFor(m => m.BirthDate)</div>
                <div class="col-1">
                    @Html.EditorFor(m => m.BirthDate,
                             new { htmlAttributes = new { @class = "form-control", type = "date" } }
                             )
                </div>
                <div class="col-2">
                    @Html.ValidationMessageFor(m => m.BirthDate)
                </div>
            </div>
            <div class="row">
                <div class="col-1">@Html.LabelFor(m => m.Gender)</div>
                <div class="col-2">
                    @Html.DropDownListFor(m => m.Gender,
                             new SelectList(Enum.GetValues(typeof(Gender))))
                </div>
                <div class="col-2">
                    @Html.ValidationMessageFor(m => m.Gender)
                </div>
            </div>
            <div class="row">
                <div class="col-1"></div>
                <div class="col-2">
                    <input type="submit" class="right" value="Create" />
                    <a class="right" href="/Home/Index">Back</a>
                </div>
            </div>
        </div>
    </form>
</fieldset>

