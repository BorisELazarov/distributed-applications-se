@model UI.ViewModels.Users.ProfileVM

@{
    ViewData["Title"] = "Profile";
}

<h1>Profile</h1>

<div>
    <hr />
    @Html.HiddenFor(m=>m.Id)
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(m => m.Username)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(m => m.Username)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(m => m.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(m => m.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(m => m.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(m => m.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(m => m.BirthDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(m => m.BirthDate)
        </dd>
        <dt class="col-sm-2">
            Gender:
        </dt>
        <dd class="col-sm-10">
            @if (Model.IsMale)
            {
                <div>Male</div>
            }
            else
            {
                <div>Female</div>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(m => m.Balance)
        </dt>
        <dd class="col-sm-10">

            @Html.DisplayFor(m => m.Balance)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Change password", "ChangePassword", new { id = Model.Id }) |
    @Html.ActionLink("Cards", "Index", "Cards", new { id = Model.Id })
    <br>
    <a href="/Users/Delete?Id=@Model.Id"
       onclick="return confirm('Are you sure, you want to delete your account?');">Delete account!</a>
</div>
