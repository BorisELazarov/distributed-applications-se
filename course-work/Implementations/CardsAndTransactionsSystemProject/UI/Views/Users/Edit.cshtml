@using UI.Enums
@model UI.ViewModels.Users.EditVM

@{
    this.Layout = "/Views/Shared/_Layout.cshtml";
    ViewData["title"] = "Edit";
}

<fieldset>
    <legend>Edit</legend>
    <form action="/Users/Edit" method="post">
        <div class="grid">
            @Html.HiddenFor(m => m.Id)
            @Html.HiddenFor(m=>m.Password)
            <div class="row">
                <div class="col-1">@Html.LabelFor(m => m.Username)</div>
                <div class="col-2">
                    @Html.TextBoxFor(m => m.Username)
                </div>
                <div class="col-2">
                    @Html.ValidationMessageFor(m => m.Username)
                </div>
            </div>
            <div class="row">
                <div class="col-1">@Html.LabelFor(m => m.FirstName)</div>
                <div class="col-2">
                    @Html.TextBoxFor(m => m.FirstName)
                </div>
                <div class="col-2">
                    @Html.ValidationMessageFor(m => m.FirstName)
                </div>
            </div>
            <div class="row">
                <div class="col-1">@Html.LabelFor(m => m.LastName)</div>
                <div class="col-2">
                    @Html.TextBoxFor(m => m.LastName)
                </div>
                <div class="col-2">
                    @Html.ValidationMessageFor(m => m.LastName)
                </div>
            </div>
            <div class="row">
                <div class="col-1">@Html.LabelFor(m => m.BirthDate)</div>
                <div class="col-2">
                     @Html.EditorFor(m => m.BirthDate,
                             new { htmlAttributes
                             = new { @class = "form-control", type = "date" }
                             }
                             )
                </div>
                <div class="col-2">
                    @Html.ValidationMessageFor(m => m.BirthDate)
                </div>
            </div>
            <div class="row">
                <div class="col-1">@Html.LabelFor(m => m.Gender)</div>
                <div class="col-2">
                    @Html.DropDownListFor(m => m.Gender,
                             new SelectList(Enum.GetValues(typeof(Gender))))
                </div>
                <div class="col-2">
                    @Html.ValidationMessageFor(m => m.Gender)
                </div>
            </div>
            <div class="row">
                <div class="col-1"></div>
                <div class="col-2">
                    <input type="submit" class="right" value="Edit" />
                    <a class="right" href="/Users/Profile?Id=@Model.Id">Back</a>
                </div>
            </div>
        </div>
    </form>
</fieldset>

